@model ArticleContent
@inject SharedViewLocalizer Localizer
@{
	ViewData["Title"] = Localizer["Modify Content"];
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

<div class="container">
	<div class="section">
		<h1 class="title">@Localizer["Modify Content"]</h1>
		<form class="form" asp-action="ModifyContent"> 
			<div asp-validation-summary="All" class="is-danger"></div>
			<input type="hidden" asp-for="@Model.Id" />
			<div class="field">
				<div class="control">
					<label class="label" asp-for="@Model.Title">@Localizer["Title"]</label>
					<input class="input" asp-for="@Model.Title" />
				</div>
			</div>
			<div class="field">
				<div class="control">
					<label class="label" asp-for="@Model.Body">@Localizer["Body"]</label>
					<textarea class="input" asp-for="@Model.Body"></textarea>
				</div>
			</div>
			<div class="control">
				<button class="button is-success" type="submit">@Localizer["Submit"]</button>
			</div>
		</form>
	</div>
</div>

<script>
	var mde = new SimpleMDE({
	});
</script>