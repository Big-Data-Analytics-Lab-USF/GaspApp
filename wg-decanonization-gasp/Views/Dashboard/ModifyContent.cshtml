@model ArticleContent
@inject SharedViewLocalizer Localizer
@{
	ViewData["Title"] = Localizer["Modify Content"];
}

<div class="container">
	<div class="section">
		<h1 class="title">@Localizer</h1>
		<form class="form" asp-action="ModifyContent"> 
			<div asp-validation-summary="All" class="is-danger"></div>
			<input type="hidden" asp-for="@Model.Id" />
			<div class="field">
				<div class="control">
					<label class="label" asp-for="@Model.Title">@Localizer["Title"]</label>
					<input class="input" asp-for="@Model.Title" />
				</div>
			</div>
			<div class="field">
				<div class="control">
					<label class="label" asp-for="@Model.Body">@Localizer["Body"]</label>
					<input class="input" asp-for="@Model.Body" />
				</div>
			</div>
			<div class="control">
				<button class="button is-success" type="submit">@Localizer["Submit"]</button>
			</div>
		</form>
	</div>
</div>
